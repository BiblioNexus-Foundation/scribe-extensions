{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022",
    "lib": ["es6","ES2022"],
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
  },
  "include": [
    "src/**/*.ts",
    "src/server/src/**/*.ts"  ,
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}